extends layout

block content
	
	table(class='table table-bordered')
				thead
					tr
						th STP No.
						th STP Title
						th Details/Location
						th Station Commander's No. and Initial
						th Date
				tbody
					each val in drillinstance_list
						tr
							td #{val.drill.code}
							td 
								!=val.drill.name
							td Blank
							td #{val.leader.number}
							td #{val.date_short}