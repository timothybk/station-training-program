extends layout

block content
	h1 #{title}

	form(method='POST' action='')
		.form-group
			label(for='code') STP Code:
			input#code.form-control(type='text', placeholder='Leave Blank if Not Applicable' name='code' value=(undefined===drill ? '' : drill.code))
		.form-group
			label(for='name') Drill Name:
			input#name.form-control(type='text', placeholder='Name of Drill' name='name' value=(undefined===drill ? '' : drill.name))
		button.btn.btn-primary(type='submit') Submit

	if errors
		ul
			for error in errors
				li!= error.msg
		


