extends layout

block content

    h1 #{title}
    
    form(method='POST' action='')
        .form-group
            label(for='name') Qualification Name:
            input#name.form-control(type='text', placeholder='Enter Name of Qualification' name='name' value=(undefined===firefighter ? '' : firefighter.number))
        button.btn.btn-primary(type='submit') Submit
        
    if errors
        ul
            for error in errors
                li!= error.msg
            